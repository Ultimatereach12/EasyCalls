<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/attence"
    android:layout_height="match_parent">
<include layout="@layout/toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:gravity="center"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/search"
            android:background="@drawable/check"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/check"
                android:text=" search by account number "
                android:textAllCaps="true"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:padding="5dp"
                android:id="@+id/searchaccount"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:layout_width="40dp"
            android:text="3"
            android:visibility="invisible"
            android:gravity="center"
            android:background="@drawable/circle"
            android:layout_marginStart="-50dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/check"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/check"
                android:text="Search by date"
                android:textAllCaps="true"
                android:gravity="center"
                android:id="@+id/searchdate"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorPrimary"
                android:padding="5dp"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_width="40dp"
            android:text="3"
            android:gravity="center"
            android:visibility="invisible"
            android:background="@drawable/circle"
            android:layout_marginStart="-50dp"
            android:layout_height="40dp" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
       android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/today"
            android:background="@drawable/check"
            android:layout_height="wrap_content">
        <TextView
            android:background="@drawable/check"
            android:text=" today's followup "
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textColor="@color/colorPrimary"
           android:padding="5dp"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_width="40dp"

            android:id="@+id/follow"
             android:gravity="center"
            android:background="@drawable/circle"
            android:layout_marginStart="-50dp"
            android:layout_height="40dp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/enddate1"
            android:background="@drawable/check"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/check"
                android:text=" today end date  "
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:textColor="@color/colorPrimary"
                android:padding="5dp"
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />

        </LinearLayout>
        <TextView
            android:layout_width="40dp"

            android:gravity="center"
            android:id="@+id/enddate"
            android:background="@drawable/circle"
            android:layout_marginStart="-50dp"
            android:layout_height="40dp" />


    </LinearLayout>

</LinearLayout>