<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/f"
        android:layout_height="match_parent"
        tools:ignore="InvalidId"
        android:background="@drawable/dashboard"
        android:orientation="vertical">
        <include layout="@layout/toolbar"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            android:gravity="center"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center|left"
                    android:text="Welcome "
                    android:fontFamily="@font/calibri"
                    android:textColor="#ffff"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="center|left"
                    android:id="@+id/name"
                    android:fontFamily="@font/calibri"
                    android:textColor="#ffff"
                    android:textStyle="bold"
                    android:textSize="30dp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight=" 1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="0dp">
            <LinearLayout
                android:layout_width="115dp"
                android:background="@drawable/back"
                android:id="@+id/Attendance1"
                android:gravity="center"
                android:layout_height="115dp">




                <LinearLayout
                    android:background="@drawable/back"
                    android:layout_width="115dp"
                    android:layout_margin="5dp"
                    android:layout_height="115dp"
                    android:id="@+id/Attendance2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/forma1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="50dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Attendance"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/calibri"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/first"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:layout_height="130dp">


            <LinearLayout
                android:layout_width="115dp"
                android:layout_weight="1"
                android:id="@+id/emplocation1"
                android:gravity="center"
                android:layout_height="115dp">


                <LinearLayout
                    android:id="@+id/set1"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/back2"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"

                        android:src="@drawable/shape1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/calibri"
                        android:gravity="center"
                        android:text="Register"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"

                        />
                </LinearLayout>

            </LinearLayout>



                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_weight="1"

                    android:gravity="center"


                    android:layout_height="130dp">


                    <LinearLayout

                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/logo" />


                    </LinearLayout>

                </LinearLayout>



            <LinearLayout
                android:layout_width="115dp"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/details"


                android:layout_height="115dp">


                <LinearLayout

                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:id="@+id/details1"
                    android:gravity="center"

                    android:background="@drawable/back1"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/dashboardreport"

                        android:gravity="center"
                        android:layout_height="50dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Details"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:textSize="16dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:fontFamily="@font/calibri"
                        android:textColor="@color/colorPrimary"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>



            </LinearLayout>

                <LinearLayout
                    android:layout_width="115dp"
                    android:id="@+id/emplocation"
                    android:gravity="center"
                    android:layout_height="115dp">




                    <LinearLayout
                        android:background="@drawable/back"
                        android:layout_width="115dp"

                        android:layout_height="115dp"
                        android:id="@+id/set"

                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/shape1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Employee List"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/calibri"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>



                </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:id="@+id/addexeu"

                android:gravity="center"
                android:layout_height="0dp">

                <LinearLayout
                    android:id="@+id/addexeu1"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                      />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="@font/calibri"
                        android:text="Direct Visit"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:id="@+id/add"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:id="@+id/Attendance"
                        android:layout_width="115dp"
                        android:layout_height="115dp"
                        android:background="@drawable/back"
                        android:layout_gravity="center"

                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/forma1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/calibri"
                            android:gravity="center"
                            android:layout_marginTop="20dp"
                            android:text="Attendance"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp"
                           />
                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/second"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal"
                android:layout_height="115dp"
                >


                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/clientlocation"
                    android:layout_height="115dp">
                    <LinearLayout
                        android:layout_width="115dp"
                        android:background="@drawable/back2"
                        android:layout_height="115dp"
                        android:id="@+id/client"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/shape1"
                            android:layout_gravity="center"
                            android:layout_height="50dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:text="My Base"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16dp"
                            android:fontFamily="@font/calibri"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="115dp">


                    <LinearLayout

                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_gravity="center"

                            android:src="@drawable/logo" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="115dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/auto"
                    android:layout_height="115dp">


                    <LinearLayout

                        android:layout_width="115dp"
                        android:background="@drawable/back1"
                        android:layout_height="115dp"
                        android:id="@+id/auto1"

                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/dashboardreport"
                            android:layout_gravity="center"
                            android:layout_height="50dp"     />

                        <TextView
                            android:layout_width="match_parent"
                            android:text="Custom Entry"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:fontFamily="@font/calibri"
                            android:layout_marginTop="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:id="@+id/del1"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:gravity="center"
                    >
                <LinearLayout
                    android:id="@+id/del"
                    android:layout_width="115dp"
                    android:layout_height="115dp"
                    android:background="@drawable/back"

                    android:layout_gravity="center"

                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fort" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/calibri"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Details"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16dp"
                        />
                </LinearLayout>

            </LinearLayout>

            </LinearLayout>





        </LinearLayout>

        </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>